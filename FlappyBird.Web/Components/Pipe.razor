@using FlappyBird.Web.Models

<div class="pipe top" style="@_topPipeCss"></div>
<div class="pipe" style="@_bottomPipeCss"></div>

@code {

    [Parameter] public PipeModel Model { get; set; }//espera un modelo como parametro

    //css para los tubos de arriba
    string _topPipeCss => $"bottom: {Model.DistanceFromBottom + 430}px; left: {Model.DistanceFromLeft}px";

    //css para los tubos de abajo
    string _bottomPipeCss => $"bottom: {Model.DistanceFromBottom}px; left: {Model.DistanceFromLeft}px";
}