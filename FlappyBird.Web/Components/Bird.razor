@using FlappyBird.Web.Models

<div class="bird" style="@_birdCss"></div>

@code {

    [Parameter] public BirdModel Model { get; set; }//recive como parametro las propiedades del modelo birdmodel

    //DistanceFromGround equivale a 100px para que el pajarito dibujado este a un nivel medio referente al suelo en este caso a otro div
    string _birdCss => $"bottom: {Model.DistanceFromGround}px";
}